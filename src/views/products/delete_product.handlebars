<form id="bajaProductoForm">
  <div>
    <label for="id_product">Id del Producto:</label>
    <input type="text" id="id_product" name="id_product" required />
  </div>
  <div>
    <button type="submit">Dar de Baja</button>
  </div>
</form>

<script>
  document.getElementById('bajaProductoForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevenir el envÃ­o del formulario

    var idProduct = document.getElementById('id_product').value;
    var formAction = `http://localhost:8080/api/products/${idProduct}` ;

    fetch(formAction, {
      method: 'DELETE'
    })
    .then(response => {
      if (response.ok) {
        alert('Producto eliminado correctamente.');
      } else {
        alert('Error al eliminar el producto.');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error al eliminar el producto.');
    });
  });
</script>
